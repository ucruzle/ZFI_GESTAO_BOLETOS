<mvc:View controllerName="sap.fi.gestaoboletos.controller.Cockpit" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" class="sapUiSizeCompact">
	
	<Page title="Gestão de Boletos - Cockpit" showHeader="true" showNavButton="false">
		<content>
	
			<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="Contas à Receber" subheader="Processamento"
				press="onContasReceber">
				<TileContent
					footer="Consultar e processar, informações da partida que gerou, datas, nosso número, código barras, ocorrências (entrada registrada, confirmação, liquidação normal, outras).">
